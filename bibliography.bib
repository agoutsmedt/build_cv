@article{goutsmedtReacting2019,
  title = {Reacting to the {{Lucas Critique}}: {{The Keynesians}}' {{Pragmatic Replies}}},
  shorttitle = {Reacting to the {{Lucas Critique}}},
  author = {Goutsmedt, Aurélien and Pinzón-Fuchs, Erich and Renault, Matthieu and Sergi, Francesco},
